        <activity android:name="com.dgk.klibrary.demo.design.component.BottomSheetActivity" />
        <activity android:name="com.dgk.klibrary.demo.design.component.ButtonActivity" />
        <activity android:name="com.dgk.klibrary.demo.design.component.CardActivity"/>



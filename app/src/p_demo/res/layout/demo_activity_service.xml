<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".klibrary.demo.service.ServiceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/common_white"
        app:layout_scrollFlags="scroll|enterAlways"/>

    <Button
        android:id="@+id/btn_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_unbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unbind"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_activity_invoke_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity调用Service方法"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_service_invoke_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service调用Activity方法"
        android:textAllCaps="false" />

</LinearLayout>
